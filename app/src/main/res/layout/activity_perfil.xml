<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#4C4C4C"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado con logo y texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/logoPerfil"
                android:layout_width="113dp"
                android:layout_height="92dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/textPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Perfil"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"/>
        </LinearLayout>

        <!-- Imagen usuario -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="129dp"
            android:layout_marginTop="36dp"
            app:srcCompat="@drawable/_0_usuario"/>

        <!-- Campos -->
        <EditText
            android:id="@+id/editTextNombresUsuario"
            android:layout_width="209dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_tv"
            android:ems="10"
            android:inputType="text"
            android:hint="Nombre"
            android:paddingStart="15dp"/>

        <EditText
            android:id="@+id/editTextApellidosUsuario"
            android:layout_width="209dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_tv"
            android:ems="10"
            android:inputType="text"
            android:hint="Apellidos"
            android:paddingStart="15dp"/>

        <EditText
            android:id="@+id/editTextCorreoUsuario"
            android:layout_width="209dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_tv"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Correo"
            android:paddingStart="15dp"/>

        <EditText
            android:id="@+id/editTextTelefonoUsuario"
            android:layout_width="209dp"
            android:layout_height="39dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_tv"
            android:ems="10"
            android:hint="Teléfono"
            android:inputType="phone"
            android:paddingStart="15dp"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#00BFFF"
            android:text="Editar Perfil"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>
